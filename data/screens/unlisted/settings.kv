# Settings screen

MainScreen:
    name: 'Settings'
    focused: ti_default
    on_parent:
        if not args[1] and self.focused: self.focused.focus = False
        if args[1]: ti_default.focus = True

    Label:
        text: 'Client Name'

    CTextInput
        id: ti_default
        size_hint_y: None
        height: '32dp'
        multiline: False
        text: 'Ex: Upstairs Computer'
        focus: True

    Label:
        text: 'IP Address'

    CTextInput
        # id: ti_default
        size_hint_y: None
        height: '32dp'
        multiline: False
        text: 'localhost'

    Label:
        text: 'Port'

    CTextInput:
        size_hint_y: None
        height: '32dp'
        text: '54657'
        multiline: False

    Label:
        text: 'Key'

    CTextInput:
        size_hint_y: None
        height: '32dp'
        text: 'ABC1234'
        password: True
        multiline: False

    Button:
        size_hint_y: None
        height: '48dp'
        text: 'Save'

    Button:
        size_hint_y: None
        height: '48dp'
        text: 'Cancel'

<CTextInput@TextInput>
    on_focus:
        screen = self.parent.parent.parent.parent
        if screen.parent: screen.focused = self
